<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".HistoryDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Details"
                android:textSize="36sp"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="18sp"
                android:textColor="@color/secondary_text"
                android:padding="8dp"
                android:background="@drawable/date_background"
                android:gravity="center" />
        </LinearLayout>

        <!-- Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:padding="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Each Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/icon_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text" />

                    <TextView
                        android:id="@+id/tvVendor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:layout_marginStart="8dp"
                        android:textSize="18sp"
                        android:textColor="@color/secondary_text" />
                </LinearLayout>

                <!-- Repeat similar rows for other details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_clock"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/icon_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In Time:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text" />

                    <TextView
                        android:id="@+id/tvInTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 AM"
                        android:layout_marginStart="8dp"
                        android:textSize="18sp"
                        android:textColor="@color/secondary_text" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_exit"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/icon_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Out Time:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvOutTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5:00 PM"
                        android:textSize="18sp"
                        android:textColor="@color/secondary_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/icon_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In Location:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvInLoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 Main Street"
                        android:textSize="18sp"
                        android:textColor="@color/secondary_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/icon_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Out Location:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvOutLoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="456 Park Avenue"
                        android:textSize="18sp"
                        android:textColor="@color/secondary_text" />
                </LinearLayout>


                    <!-- Product -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_product"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/icon_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product:"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Example Product"
                            android:textSize="18sp"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>

                    <!-- Quantity -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_inventory"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/icon_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity:"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="18sp"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>

                    <!-- In Latitude -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_gps"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/icon_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Latitude:"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvInLat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="37.7749° N"
                            android:textSize="18sp"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>

                    <!-- Out Latitude -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_gps"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/icon_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Out Latitude:"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvOutLat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="38.9072° N"
                            android:textSize="18sp"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>

                    <!-- In Longitude -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_gps"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/icon_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Longitude:"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvInLon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-122.4194° W"
                            android:textSize="18sp"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>

                    <!-- Out Longitude -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_gps"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/icon_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Out Longitude:"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvOutLon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-77.0369° W"
                            android:textSize="18sp"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>




                <!-- Add other rows for Out Time, In Loc, etc., in a similar manner -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
